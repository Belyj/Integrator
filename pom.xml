<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>Int</groupId>
    <artifactId>Int</artifactId>
    <version>1.0-SNAPSHOT</version>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.7</source>
                    <target>1.7</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>sql-maven-plugin</artifactId>
                <version>1.5</version>
                <dependencies>
                    <dependency>
                        <groupId>mysql</groupId>
                        <artifactId>mysql-connector-java</artifactId>
                        <version>5.1.9</version>
                    </dependency>
                </dependencies>
                <!-- common configuration shared by all executions -->
                <configuration>
                    <driver>com.mysql.jdbc.Driver</driver>
                    <url>jdbc:mysql://localhost:3306/</url>
                    <username>root</username>
                    <password>1Q2q3q4q</password>
                </configuration>
                <executions>
                    <execution>
                        <id>drop-schema</id>
                        <phase>process-test-resources</phase>
                        <goals>
                            <goal>execute</goal>
                        </goals>
                        <configuration>
                            <autocommit>true</autocommit>
                            <srcFiles>
                                <srcFile>src/main/resources/sqlScripts/DataInit/00 DropSchema.sql</srcFile>
                            </srcFiles>
                        </configuration>
                    </execution>
                    <execution>
                        <id>create-schema</id>
                        <phase>process-test-resources</phase>
                        <goals>
                            <goal>execute</goal>
                        </goals>
                        <configuration>
                            <autocommit>true</autocommit>
                            <srcFiles>
                                <srcFile>src/main/resources/sqlScripts/DataInit/01 CreateSchema.sql</srcFile>
                                <srcFile>src/main/resources/sqlScripts/DataInit/02 CreateContactTable.sql</srcFile>
                                <srcFile>src/main/resources/sqlScripts/DataInit/03 CreateGroupTable.sql</srcFile>
                                <srcFile>src/main/resources/sqlScripts/DataInit/04 CreateUserTable.sql</srcFile>
                                <srcFile>src/main/resources/sqlScripts/DataInit/05 CreateLinkTable.sql</srcFile>
                                <srcFile>src/main/resources/sqlScripts/DataInit/06 CreateTestData.sql</srcFile>
                            </srcFiles>
                        </configuration>
                    </execution>
                    <execution>
                        <id>create-procedure</id>
                        <phase>process-test-resources</phase>
                        <goals>
                            <goal>execute</goal>
                        </goals>
                        <configuration>
                            <delimiter>|</delimiter>
                            <autocommit>true</autocommit>
                            <srcFiles>
                                <srcFile>src/main/resources/sqlScripts/Procedures/createContact.sql</srcFile>
                                <srcFile>src/main/resources/sqlScripts/Procedures/getContactByName.sql</srcFile>
                                <srcFile>src/main/resources/sqlScripts/Procedures/getContactList.sql</srcFile>
                                <srcFile>src/main/resources/sqlScripts/Procedures/removeContactByID.sql</srcFile>
                                <srcFile>src/main/resources/sqlScripts/Procedures/UpdateContact.sql</srcFile>
                                <srcFile>src/main/resources/sqlScripts/Procedures/createGroup.sql</srcFile>
                                <srcFile>src/main/resources/sqlScripts/Procedures/getGroupByName.sql</srcFile>
                                <srcFile>src/main/resources/sqlScripts/Procedures/getGroupList.sql</srcFile>
                                <srcFile>src/main/resources/sqlScripts/Procedures/removeGroupByID.sql</srcFile>
                                <srcFile>src/main/resources/sqlScripts/Procedures/updateGroup.sql</srcFile>
                                <srcFile>src/main/resources/sqlScripts/Procedures/averageContactsInGroups.sql</srcFile>
                                <srcFile>src/main/resources/sqlScripts/Procedures/avgCountOfContacts.sql</srcFile>
                                <srcFile>src/main/resources/sqlScripts/Procedures/unactiveList.sql</srcFile>
                                <srcFile>src/main/resources/sqlScripts/Procedures/userContactsCount.sql</srcFile>
                                <srcFile>src/main/resources/sqlScripts/Procedures/userCount.sql</srcFile>
                                <srcFile>src/main/resources/sqlScripts/Procedures/userGroupsCount.sql</srcFile>
                                <srcFile>src/main/resources/sqlScripts/Procedures/addInGroup.sql</srcFile>
                                <srcFile>src/main/resources/sqlScripts/Procedures/removeFromGroup.sql</srcFile>
                            </srcFiles>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <!-- https://mvnrepository.com/artifact/org.codehaus.jackson/jackson-mapper-asl -->
    <dependencies>
        <dependency>
            <groupId>com.fasterxml.jackson.dataformat</groupId>
            <artifactId>jackson-dataformat-xml</artifactId>
            <version>2.6.3</version>
        </dependency>
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-lang3</artifactId>
            <version>3.4</version>
        </dependency>
        <dependency>
            <groupId>mysql</groupId>
            <artifactId>mysql-connector-java</artifactId>
            <version>5.1.6</version>
        </dependency>
    </dependencies>
</project>